{
  "name": "apollos",
  "version": "1.0.7",
  "description": "A reactive framework for incredible applications",
  "main": "src/core/index.js",
  "scripts": {

    "ts:lint": "tslint src/**/*.ts && tslint test/**/*.ts",
    "ts:pretest": "rm -rf ./dist && tsc",
    "ts:ci-test": "mocha --require ./test/fixtures/setup.js --reporter mocha-junit-reporter --full-trace --recursive --reporter-options mochaFile=$CIRCLE_TEST_REPORTS/mocha/junit.xml ./dist/test",
    "ts:test": "mocha --require ./test/fixtures/setup.js --reporter spec --full-trace --recursive ./dist/test",
    "ts:posttest": "npm run lint",


    "lint": "eslint core give profile groups test",
    "fix": "eslint --fix core give profile groups test",
    "check": "npm run lint && npm run test",
    "test": "mocha --compilers js:babel-core/register --recursive",
    "build": "./node_modules/.bin/babel src -d lib",
    "postinstall": "npm run build",

    "test:watch": "npm test -- --watch",
    "coverage": "istanbul cover ./node_modules/mocha/bin/_mocha -- --require ./test/fixtures/setup.js --reporter dot --full-trace --recursive ./dist/test/",
    "postcoverage": "remap-istanbul --input coverage/coverage.json --type lcovonly --output coverage/lcov.info",
    "docs:clean": "rimraf _book",
    "docs:prepare": "gitbook install",
    "docs:build": "npm run docs:prepare && gitbook build -g NewSpring/Apollos",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "docs:publish": "npm run docs:clean && npm run docs:build && cd _book && git init && git commit --allow-empty -m 'update book' && git checkout -b gh-pages && touch .nojekyll && git add . && git commit -am 'update book' && git push git@github.com:NewSpring/Apollos gh-pages --force"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NewSpring/newspring-core.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NewSpring/newspring-core/issues"
  },
  "homepage": "https://github.com/NewSpring/newspring-core",
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-enzyme": "^0.4.1",
    "coveralls": "^2.11.9",
    "enzyme": "^2.2.0",
    "babel": "^6.5.2",
    "babel-cli": "^6.7.5",
    "babel-core": "^6.7.6",
    "babel-eslint": "^6.0.2",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-css-modules-transform": "^0.0.9",
    "babel-plugin-transform-decorators": "^6.6.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-decorators-legacy": "^1.0.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-meteor": "^6.6.6",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^1.7.1",
    "babel-plugin-react-transform": "^2.0.2",
    "eslint-config-rackt": "1.0.0",
    "eslint-plugin-react": "^3.6.3",
    "expect": "^1.13.4",
    "gitbook-cli": "^0.3.4",
    "istanbul": "^0.4.2",
    "lodash": "^4.8.2",
    "mocha": "^2.3.4",
    "mocha-junit-reporter": "^1.10.0",
    "react-addons-test-utils": "^0.14.8",
    "redux-logger": "^2.6.1",
    "remap-istanbul": "^0.5.1",
    "sinon": "^1.17.3",
    "tslint": "^3.7.1",
    "typescript": "^1.8.9",
    "typescript-definition-tester": "0.0.4",
    "typescript-require": "^0.2.9-1"
  },
  "dependencies": {
    "bluebird": "^3.3.4",
    "fibers": "^1.0.10",
    "google-map-react": "^0.10.5",
    "jsdom": "^8.3.0",
    "liquid-node": "git+https://github.com/NewSpring/liquid-node.git",
    "lodash.assign": "^4.0.6",
    "lokka": "^1.6.1",
    "lokka-transport-http": "^1.3.0",
    "moment": "^2.10.6",
    "react": "^15.0.2",
    "react-controllables": "^0.6.0",
    "react-day-picker": "^1.2.0",
    "react-dom": "^15.0.2",
    "react-helmet": "^2.3.1",
    "react-mixin": "^3.0.0",
    "react-motion": "^0.4.2",
    "react-pure-render": "^1.0.2",
    "react-redux": "^4.0.0",
    "react-router": "^2.0.1",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redux": "^3.0.4",
    "redux-saga": "^0.8.0",
    "redux-thunk": "^1.0.2",
    "regenerator": "^0.8.42",
    "slack": "^5.3.0",
    "to-pascal-case": "^1.0.0",
    "to-snake-case": "^1.0.0",
    "velocity-animate": "^1.2.3",
    "velocity-react": "^1.1.1",
    "xml2js": "^0.4.15"
  }
}
