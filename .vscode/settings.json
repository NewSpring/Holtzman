    "**/**/*.yml": true,
    "**/npm-*": true,
    "coverage": true,
    "typings": true,
    "assets": true,
    ".metoer/local": true,
    "packages": true,
    "public": true,
    ".editorconfig": true,
    "launch.json": true,
    "LICENSE": true,
    "main.html": true,
    "mobile-config.js": true,
    "NewSpring.xcscheme": true,
    ".travis": true,
    "scripts": true,
    ".bin": true,
    ".github": true,
    ".meteor": true,
    ".storybook": true,
    ".types": true,
    ".babelrc": true,
    ".flowconfig": true,
    ".gitignore": true,
    ".remote": true
