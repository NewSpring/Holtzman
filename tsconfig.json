{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "rootDir": ".",
    "outDir": ".tmp",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true,
    "jsx": "preserve",
    "allowJs": false
  },
  "exclude": [
    "typings",
    "node_modules",
    "lib",
    ".tmp",
    ".test",
    "test/fixtures"
  ]
}
