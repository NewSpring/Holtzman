#!/bin/bash
set -e

openssl aes-256-cbc -K $encrypted_de5ad5555d6e_key -iv $encrypted_de5ad5555d6e_iv -in .travis/ci.enc -out ~/.ssh/id_rsa -d
chmod 600 ~/.ssh/id_rsa
eval `ssh-agent -s`
ssh-add ~/.ssh/id_rsa

BUILD_TAG="GH$TRAVIS_PULL_REQUEST-B$TRAVIS_BUILD_NUMBER"
REPO=`git config remote.origin.url`
SSH_REPO=${REPO/https:\/\/github.com\//git@github.com:}

git config user.name "Travis CI"
git config user.email "$COMMIT_AUTHOR_EMAIL"

# remove all local tags
git tag -l | xargs git tag -d

# create a new new tag from TRAVIS_TAG (GH###-B#)
git tag $BUILD_TAG

# push tag to github
git push -q $SSH_REPO --tags

echo "Pushed Tag: $BUILD_TAG to Github!"


